{
	"preset": "ts-jest/presets/default-esm",
	"collectCoverage": true,
	"collectCoverageFrom": ["source/**/*.ts"],
	"testTimeout": 30000,
	"testMatch": ["**/test/library/**/*-test.[jt]s?(x)"],
	"moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	}
}
